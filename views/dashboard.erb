<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Honeypot Dashboard</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: 'SF Mono', 'Monaco', 'Courier New', monospace;
      background: #0d1117;
      color: #c9d1d9;
      padding: 20px;
      line-height: 1.6;
    }

    .container { max-width: 1400px; margin: 0 auto; }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 2px solid #21262d;
      padding-bottom: 20px;
      margin-bottom: 30px;
    }

    h1 { font-size: 28px; color: #58a6ff; }

    .nav { display: flex; gap: 15px; }
    .nav a {
      color: #8b949e;
      text-decoration: none;
      padding: 8px 16px;
      border-radius: 6px;
      transition: all 0.2s;
    }
    .nav a:hover { background: #21262d; color: #c9d1d9; }
    .nav a.active { background: #1f6feb; color: white; }

    .status-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }

    .stat-card {
      background: #161b22;
      padding: 24px;
      border-radius: 8px;
      border: 1px solid #21262d;
      transition: all 0.2s;
    }

    .stat-card:hover {
      border-color: #30363d;
      transform: translateY(-2px);
    }

    .stat-label {
      font-size: 12px;
      text-transform: uppercase;
      color: #8b949e;
      margin-bottom: 8px;
      font-weight: 600;
    }

    .stat-value {
      font-size: 36px;
      font-weight: bold;
      color: #58a6ff;
      font-family: monospace;
    }

    .stat-value.good { color: #3fb950; }
    .stat-value.warning { color: #d29922; }

    .actions {
      background: #161b22;
      padding: 20px;
      border-radius: 8px;
      border: 1px solid #21262d;
      margin-bottom: 30px;
    }

    .actions h2 {
      font-size: 18px;
      margin-bottom: 15px;
      color: #c9d1d9;
    }

    button, .button {
      background: #238636;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 6px;
      cursor: pointer;
      font-family: inherit;
      font-size: 14px;
      font-weight: 600;
      transition: all 0.2s;
      text-decoration: none;
      display: inline-block;
    }

    button:hover, .button:hover {
      background: #2ea043;
      transform: translateY(-1px);
    }

    .connections {
      background: #161b22;
      padding: 24px;
      border-radius: 8px;
      border: 1px solid #21262d;
    }

    .connections h2 {
      font-size: 18px;
      margin-bottom: 20px;
      color: #c9d1d9;
    }

    .connection-list {
      max-height: 500px;
      overflow-y: auto;
    }

    .connection {
      padding: 12px;
      border-bottom: 1px solid #21262d;
      font-size: 13px;
      font-family: 'SF Mono', monospace;
      display: grid;
      grid-template-columns: 80px 1fr 80px 80px;
      gap: 15px;
      align-items: center;
    }

    .connection:last-child { border-bottom: none; }
    .connection:hover { background: #0d1117; }

    .time { color: #8b949e; }
    .source { color: #c9d1d9; }
    .port { color: #79c0ff; font-weight: 600; }

    .state {
      display: inline-block;
      padding: 4px 10px;
      border-radius: 12px;
      font-size: 11px;
      font-weight: bold;
      text-transform: uppercase;
      text-align: center;
    }

    .state.open {
      background: #238636;
      color: white;
    }

    .state.filtered {
      background: #9e6a03;
      color: white;
    }

    .state.closed {
      background: #da3633;
      color: white;
    }

    .empty-state {
      text-align: center;
      padding: 40px;
      color: #8b949e;
      font-style: italic;
    }

    .alert {
      padding: 12px 16px;
      border-radius: 6px;
      margin-bottom: 20px;
      border-left: 4px solid;
    }

    .alert.success {
      background: #0d4429;
      border-color: #238636;
      color: #3fb950;
    }

    .alert.error {
      background: #4c1b1b;
      border-color: #da3633;
      color: #f85149;
    }

    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }

    .updating {
      animation: pulse 1.5s ease-in-out infinite;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>üçØ Honeypot Dashboard</h1>
      <div class="nav">
        <a href="/dashboard" class="active">Dashboard</a>
        <a href="/settings">Settings</a>
      </div>
    </div>

    <% if params[:rotated] %>
      <div class="alert success">
        ‚úì Port rotation triggered successfully
      </div>
    <% end %>

    <% if params[:error] %>
      <div class="alert error">
        ‚úó Error: <%= params[:error] %>
      </div>
    <% end %>

    <div class="status-grid" id="stats">
      <div class="stat-card">
        <div class="stat-label">Ports Bound</div>
        <div class="stat-value"><%= @status[:ports_bound] %> / <%= @status[:ports_total] %></div>
      </div>

      <div class="stat-card">
        <div class="stat-label">Uptime</div>
        <div class="stat-value good"><%= format_duration(@status[:uptime]) %></div>
      </div>

      <div class="stat-card">
        <div class="stat-label">Last Rotation</div>
        <div class="stat-value warning"><%= @status[:last_rotation] %>s ago</div>
      </div>

      <div class="stat-card">
        <div class="stat-label">Connections</div>
        <div class="stat-value"><%= @status[:connections_today] %></div>
      </div>
    </div>

    <div class="actions">
      <h2>Actions</h2>
      <form action="/rotate" method="post" style="display: inline;">
        <button type="submit">üîÑ Rotate Ports Now</button>
      </form>
      <a href="/dashboard" class="button" style="background: #1f6feb; margin-left: 10px;">üîÉ Refresh</a>
    </div>

    <div class="connections">
      <h2>Recent Connections (<span id="connection-count"><%= @connections.size %></span>)</h2>
      <div class="connection-list" id="connections">
        <% if @connections.empty? %>
          <div class="empty-state">
            No connections yet. Start scanning to see activity here.
          </div>
        <% else %>
          <% @connections.reverse.each do |conn| %>
            <div class="connection">
              <span class="time"><%= format_timestamp(conn[:timestamp]) %></span>
              <span class="source"><%= conn[:source] %></span>
              <span class="port">:<%= conn[:port] %></span>
              <span class="state <%= state_class(conn[:state]) %>"><%= conn[:state] %></span>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <script>
    // Auto-refresh stats and connections every 3 seconds
    async function updateStats() {
      try {
        const res = await fetch('/api/status');
        const data = await res.json();

        // Update stat cards
        const stats = document.getElementById('stats');
        if (stats) {
          stats.innerHTML = `
            <div class="stat-card">
              <div class="stat-label">Ports Bound</div>
              <div class="stat-value">${data.ports_bound} / ${data.ports_total}</div>
            </div>
            <div class="stat-card">
              <div class="stat-label">Uptime</div>
              <div class="stat-value good">${formatDuration(data.uptime)}</div>
            </div>
            <div class="stat-card">
              <div class="stat-label">Last Rotation</div>
              <div class="stat-value warning">${data.last_rotation}s ago</div>
            </div>
            <div class="stat-card">
              <div class="stat-label">Connections</div>
              <div class="stat-value">${data.connections_today}</div>
            </div>
          `;
        }
      } catch (err) {
        console.error('Failed to update stats:', err);
      }
    }

    async function updateConnections() {
      try {
        const res = await fetch('/api/connections?limit=50');
        const connections = await res.json();

        const count = document.getElementById('connection-count');
        if (count) count.textContent = connections.length;

        const list = document.getElementById('connections');
        if (list && connections.length > 0) {
          list.innerHTML = connections.reverse().map(conn => `
            <div class="connection">
              <span class="time">${formatTimestamp(conn.timestamp)}</span>
              <span class="source">${conn.source}</span>
              <span class="port">:${conn.port}</span>
              <span class="state ${stateClass(conn.state)}">${conn.state}</span>
            </div>
          `).join('');
        } else if (list) {
          list.innerHTML = '<div class="empty-state">No connections yet. Start scanning to see activity here.</div>';
        }
      } catch (err) {
        console.error('Failed to update connections:', err);
      }
    }

    function formatDuration(seconds) {
      const h = Math.floor(seconds / 3600);
      const m = Math.floor((seconds % 3600) / 60);
      const s = seconds % 60;

      if (h > 0) return `${h}h ${m}m`;
      if (m > 0) return `${m}m ${s}s`;
      return `${s}s`;
    }

    function formatTimestamp(isoString) {
      try {
        const date = new Date(isoString);
        return date.toLocaleTimeString('en-US', { hour12: false });
      } catch {
        return isoString;
      }
    }

    function stateClass(state) {
      return state.toLowerCase();
    }

    // Update every 3 seconds
    setInterval(() => {
      updateStats();
      updateConnections();
    }, 3000);
  </script>
</body>
</html>
